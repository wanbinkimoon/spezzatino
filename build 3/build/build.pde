int stageW      = 800;
int stageH      = 800;
color bgC       = #000000;
String dataPATH = "../../data";

// ================================================================

void settings(){ 
	size(stageW, stageH);

}

// ================================================================

void setup() {
	background(bgC);

}

// ================================================================

float xoff1 = 0;
float xoff2 = 10000;

// ================================================================
void draw() {
	background(bgC);
	noStroke();
	
	// ================================================================

	float x = map(noise(xoff1), 0, 1, 0, width);
	float y = map(noise(xoff2), 0, 1, 0, width);

	xoff1 += 0.01;
	xoff2 += 0.01;
// ================================================================

	ellipse(x, y, 24, 24);
}
